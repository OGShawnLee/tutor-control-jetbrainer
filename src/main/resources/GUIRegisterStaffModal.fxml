<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import org.controlsfx.control.CheckComboBox?>

<AnchorPane fx:id="container" prefHeight="800.0" prefWidth="800.0" stylesheets="@main.css"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="daima.gui.controller.RegisterStaffController">
  <children>
    <VBox prefHeight="800.0" prefWidth="800.0" style="-fx-alignment: center;">
      <children>
        <VBox maxWidth="360.0" prefWidth="360.0" spacing="32.0">
          <children>
            <Label fx:id="title" styleClass="title" text="Registrar Miembro de Personal"/>
            <VBox prefWidth="340.0" spacing="16.0">
              <children>
                <VBox prefWidth="360.0" spacing="8.0">
                  <children>
                    <Label styleClass="label" text="Nombre"/>
                    <TextField fx:id="fieldName" promptText="Introduzca el Nombre del Miembro de Personal"
                               styleClass="input"/>
                    <Label fx:id="labelTagName" text="Label" textFill="RED"/>
                  </children>
                </VBox>
                <VBox prefWidth="360.0" spacing="8.0">
                  <children>
                    <Label styleClass="label" text="Apellidos"/>
                    <TextField fx:id="fieldLastName" promptText="Introduzca los Apellidos del Miembro de Personal"
                               styleClass="input"/>
                    <Label fx:id="labelTagLastName" text="Label" textFill="RED"/>
                  </children>
                </VBox>
                <VBox prefWidth="360.0" spacing="8.0">
                  <children>
                    <Label styleClass="label" text="Correo Electrónico"/>
                    <TextField fx:id="fieldEmail" promptText="Introduzca el Correo Electrónico del Miembro de Personal"
                               styleClass="input"/>
                    <Label fx:id="labelTagEmail" text="Label" textFill="RED"/>
                  </children>
                </VBox>
                <VBox prefWidth="360.0" spacing="8.0">
                  <children>
                    <Label styleClass="label" text="Número de Personal"/>
                    <TextField fx:id="fieldIDWorker"
                               promptText="Introduzca el Número de Personal del Miembro de Personal"
                               styleClass="input"/>
                    <Label fx:id="labelTagIDWorker" text="Label" textFill="RED"/>
                  </children>
                </VBox>
                <VBox prefWidth="360.0" spacing="8.0">
                  <children>
                    <Label styleClass="label" text="Roles"/>
                    <CheckComboBox fx:id="fieldStaffRole" maxWidth="1.7976931348623157E308" styleClass="input"/>
                    <Label fx:id="labelTagStaffRole" text="Label" textFill="RED"/>
                  </children>
                </VBox>
                <VBox prefWidth="360.0" spacing="8.0">
                  <children>
                    <Label styleClass="label" text="Programas Tutorados"/>
                    <CheckComboBox fx:id="fieldTutoredProgram" maxWidth="1.7976931348623157E308" styleClass="input"
                                   disable="true"/>
                    <Label fx:id="labelTagProgramTutor" text="Label" textFill="RED"/>
                  </children>
                </VBox>
                <HBox maxWidth="1.7976931348623157E308" spacing="16.0">
                  <children>
                    <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onClickClose"
                            prefWidth="172.0" styleClass="button" text="Cerrar"/>
                    <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onClickRegisterStaff"
                            prefWidth="172.0" text="Confirmar"/>
                  </children>
                </HBox>
              </children>
            </VBox>
          </children>
        </VBox>
      </children>
    </VBox>
  </children>
</AnchorPane>
