<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="container" prefHeight="800.0" prefWidth="1280.0" stylesheets="@main.css"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="daima.gui.controller.LogInController">
  <children>
    <VBox layoutX="460.0" layoutY="264.0" prefWidth="360.0" spacing="32.0">
      <children>
        <Label styleClass="title" text="Iniciar Sesión"/>
        <VBox prefWidth="340.0" spacing="16.0">
          <children>
            <VBox prefWidth="360.0" spacing="8.0">
              <children>
                <Label styleClass="label" text="Correo Electrónico"/>
                <TextField fx:id="fieldEmail" promptText="Introduzca su Correo Electrónico" styleClass="input"/>
                <Label fx:id="labelTagEmail" text="Label" textFill="RED"/>
              </children>
            </VBox>
            <VBox prefWidth="360.0" spacing="8.0">
              <children>
                <Label styleClass="label" text="Contraseña"/>
                <PasswordField fx:id="fieldPassword" promptText="Introduzca su Contraseña" styleClass="input"/>
                <Label fx:id="labelTagPassword" text="Label" textFill="RED"/>
              </children>
            </VBox>
            <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onClickLogIn"
                    styleClass="button" text="Iniciar Sesión"/>
          </children>
        </VBox>
      </children>
    </VBox>
  </children>
</AnchorPane>
