<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="container" prefHeight="800.0" prefWidth="800.0" stylesheets="@main.css"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="daima.gui.controller.SignUpController">
  <children>
    <VBox prefHeight="800.0" prefWidth="800.0" style="-fx-alignment: center;">
      <children>
        <VBox maxWidth="360.0" prefWidth="360.0" spacing="32.0">
          <children>
            <Label styleClass="title" text="Registrar Primer Administrador"/>
            <VBox prefWidth="340.0" spacing="16.0">
              <children>
                <VBox prefWidth="360.0" spacing="8.0">
                  <children>
                    <Label styleClass="label" text="Nombre"/>
                    <TextField fx:id="fieldName" promptText="Introduzca su Nombre"
                               styleClass="input"/>
                    <Label fx:id="labelTagName" text="Label" textFill="RED"/>
                  </children>
                </VBox>
                <VBox prefWidth="360.0" spacing="8.0">
                  <children>
                    <Label styleClass="label" text="Apellidos"/>
                    <TextField fx:id="fieldLastName" promptText="Introduzca sus Apellidos"
                               styleClass="input"/>
                    <Label fx:id="labelTagLastName" text="Label" textFill="RED"/>
                  </children>
                </VBox>
                <VBox prefWidth="360.0" spacing="8.0">
                  <children>
                    <Label styleClass="label" text="Correo Electrónico"/>
                    <TextField fx:id="fieldEmail" promptText="Introduzca su Correo Electrónico"
                               styleClass="input"/>
                    <Label fx:id="labelTagEmail" text="Label" textFill="RED"/>
                  </children>
                </VBox>
                <VBox prefWidth="360.0" spacing="8.0">
                  <children>
                    <Label styleClass="label" text="Número de Personal"/>
                    <PasswordField fx:id="fieldIDWorker" promptText="Introduzca su Número de Personal"
                                   styleClass="input"/>
                    <Label fx:id="labelTagIDWorker" text="Label" textFill="RED"/>
                  </children>
                </VBox>
                <VBox prefWidth="360.0" spacing="8.0">
                  <children>
                    <Label styleClass="label" text="Contraseña"/>
                    <PasswordField fx:id="fieldPassword" promptText="Introduzca su Contraseña"
                                   styleClass="input"/>
                    <Label fx:id="labelTagPassword" text="Label" textFill="RED"/>
                  </children>
                </VBox>
                <VBox prefWidth="360.0" spacing="8.0">
                  <children>
                    <Label styleClass="label" text="Confirmar Contraseña"/>
                    <TextField fx:id="fieldConfirmPassword" promptText="Confirme su Contraseña"
                               styleClass="input"/>
                    <Label fx:id="labelTagConfirmPassword" text="Label" textFill="RED"/>
                  </children>
                </VBox>
                <HBox maxWidth="1.7976931348623157E308" spacing="16.0">
                  <children>
                    <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onClickClose"
                            prefWidth="172.0" styleClass="button" text="Cerrar"/>
                    <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onClickSignUp"
                            prefWidth="172.0" text="Confirmar"/>
                  </children>
                </HBox>
              </children>
            </VBox>
          </children>
        </VBox>
      </children>
    </VBox>
  </children>
</AnchorPane>
